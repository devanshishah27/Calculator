<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingTop="16sp"
    android:paddingBottom="16sp"
    tools:context=".MainActivity"
    android:background="@color/background">

    <TextView android:text="Calculator" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="20mm"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText2"
            android:background="@color/text"
            android:editable="false"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/die1"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/button"
                android:layout_gravity="right"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/button"
                android:text="Back"
                android:id="@+id/back" />
        </RelativeLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"

            >

            <Button android:text="Sin"
                android:id="@+id/sin"
                android:layout_row="0"
                android:layout_column="0" />

            <Button android:text="Cos"
                android:id="@+id/cos"
                android:layout_row="0"
                android:layout_column="1" />

            <Button android:text="Tan"
                android:id="@+id/tan"
                android:layout_row="0"
                android:layout_column="2" />


            <Button android:text="i"
                android:id="@+id/i"
                android:layout_row="0"
                android:layout_column="3" />

            <Button
                android:id="@+id/ln"
                android:text="ln"
                android:layout_row="1"
                android:layout_column="0" />

            <Button
                android:id="@+id/lg"
                android:text="lg"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:id="@+id/pi"
                android:text="pi"
                android:layout_row="1"
                android:layout_column="2" />

            <Button
                android:id="@+id/e"
                android:text="e"
                android:layout_row="1"
                android:layout_column="3" />

            <Button
                android:id="@+id/percentage"
                android:text="%"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:id="@+id/factorial"
                android:text="!"
                android:layout_row="2"
                android:layout_column="1" />

            <Button
                android:id="@+id/sqrt"
                android:text="sqrt"
                android:layout_row="2"
                android:layout_column="2" />

            <Button
                android:id="@+id/raiseto"
                android:text="^"
                android:layout_row="2"
                android:layout_column="3" />

            <Button
                android:id="@+id/open_bracket"
                android:text="("
                android:layout_row="3"
                android:layout_column="0" />

            <Button
                android:id="@+id/close_bracket"
                android:text=")"
                android:layout_row="3"
                android:layout_column="1" />


        </GridLayout>





    </LinearLayout>

</RelativeLayout>
